type logoColor = [#Black | #White]
module Style = {
  open CssJs
  open Theme

  let slogan = (~hideSlogan) => {
    switch hideSlogan {
    | true => style(.[display(#none)])
    | false => style(.[])
    }
  }

  let wrapper = logoColor => {
    switch logoColor {
    | #Black => style(.[color(Colors.black)])
    | #White => style(.[color(Colors.white)])
    }
  }

  let primaryFill = logoColor => {
    switch logoColor {
    | #Black => style(.[color(Colors.primary)])
    | #White => style(.[color(Colors.white)])
    }
  }
}

